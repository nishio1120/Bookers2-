 <% if @book.errors.any? %>
 <div id = "error_explanation">
   <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>
<p id = "notice"></p>
<div class = "container px-5 px-sm-0">
 <div class = "row">
  <div class = "col-md-3">
<h2>User info</h2>
 <%= image_tag @book.user.get_profile_image(100,100) %>
 <table class ="table">
   <tbody>
     <tr></tr>
     <tr>
       <th>name</th>
       <th><%= @book.user.name %></th>
     </tr>
     <tr>
       <th>introduction</th>
       <th><%= @book.user.introduction  %></th>
     </tr>
   </tbody>
 </table>
 <div class="row">
     <%=link_to edit_user_path(current_user),class:"btn btn-outline-secondary btn-block edit_user_53324" do%>
     <i class="fas fa-user-cog"></i>
   <% end %>
 </div>
<h2 class = "mt-3">New book</h2>
<%= form_with model: @book do |f| %>
    <div class = "form-group">
        <label for = "book_title">Title</label>
      <%= f.text_field :title, class:"form-control book_title", placeholder:"" %>
    </div>
    <div class = "form-group">
        <label for = "book_opinion">Opinion</label>
      <%= f.text_area :body, class:"form-control book_body", placeholder:"" %>
    </div>
    <div class = "form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
    </div>
<% end %>
  </div>
  <div class = "col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class = "table table-hover table-inverse">
      <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      <th coispan="5"></th>
      </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
      <tr>
      <td>
          <%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(80,80) %>
          <% end %>
      </td>
       <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
      <td>
        <% if book.favorited_by?(current_user) %>
       <p>
        <%= link_to book_favorites_path(book), class:"text-danger", method: :delete do %>
          <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
        <% end %>
        </p>
      <% else %>
       <p>
        <%= link_to book_favorites_path(book), class:"text-primary", method: :post do %>
          <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
        <% end %>
       </p>
      <% end %>
      </td>
      <td>
        <p>コメント数:<%= book.book_comments.count %></p>
      </td>
      </tr>
      </tbody>
      <% end %>
    </table>
  </div>
 </div>
</div>